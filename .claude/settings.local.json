{
  "permissions": {
    "allow": [
      "Bash(npx -y @probelabs/vow@latest:*)",
      "Bash(npx -y @probelabs/vow@latest consent:*)",
      "Bash(npx -y @probelabs/vow@latest rules:*)",
      "mcp__code-search__search_code",
      "WebSearch",
      "Bash(php artisan tinker:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "npx @probelabs/vow check --hook --hook-type=PreToolUseGit"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "npx @probelabs/vow check --hook --hook-type=Stop"
          },
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit-full.sh",
            "timeout": 60000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit-full.sh",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}