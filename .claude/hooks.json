{
  "hooks": {
    "PostToolUse": [
      {
        "name": "PHP Quality Check",
        "matcher": "Write:*.php|Edit:*.php|MultiEdit:*.php",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/php-quality-check.sh",
            "timeout": 30000
          }
        ]
      },
      {
        "name": "Minimal JS/TS Check (HTMX-focused)",
        "matcher": "Write:*.js|Write:*.ts|Edit:*.js|Edit:*.ts|MultiEdit:*.js|MultiEdit:*.ts",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/js-quality-check.sh",
            "timeout": 20000
          }
        ]
      },
      {
        "name": "Relevant Tests",
        "matcher": "Write:*.php|Edit:*.php|Write:*.js|Edit:*.js|Write:*.ts|Edit:*.ts",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/test-runner.sh",
            "timeout": 60000,
            "run_in_background": true
          }
        ]
      }
    ],
    "PreTaskStart": [
      {
        "name": "Environment Check",
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸš€ Starting development task...' && echo 'Current environment:' && head -3 .env",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "name": "Pre-commit Quality Gate",
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit-check.sh",
            "timeout": 60000
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "name": "Pre-commit Quality Gate (Subagent)",
        "matcher": "*", 
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/pre-commit-check.sh",
            "timeout": 60000
          }
        ]
      }
    ]
  }
}
